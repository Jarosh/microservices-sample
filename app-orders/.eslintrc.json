{
	"plugins": ["node"],
	"extends": ["eslint:recommended", "plugin:node/recommended"],
	"rules": {
		"node/exports-style": ["error", "module.exports"],
		"no-console": "off",
		"no-tabs": "off",
		"node/no-unsupported-features/es-syntax": [
			"error",
			{
				"ignores": ["modules"]
			}
		]
	},
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 9
	},
	"env": {
		"es6": true,
		"node": true,
		"mocha": true
	}
}
